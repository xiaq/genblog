#!/bin/sh

i() {
	echo -n '`'
    cat ./include/$1 | sed 's/`/``/g'
	echo -n '`'
}

cat > ./include.go <<EOF
package main

const css = `i reset.css` + `i blog.css`

const baseTemplText = `i base.html`

const articleTemplText = `i article.html`

const categoryTemplText = `i category.html`

const feedTemplText = `i feed.atom`
EOF
